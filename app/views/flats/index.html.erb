
<nav class="navbar navbar-light sticky-top" style="background-color: #e3f2fd;">
  <a class="navbar-brand"><strong>Simple Airbnb</strong></a>
  <form class="form-inline">
    <input class="form-control mr-sm-2 d-flex" type="search" placeholder="Search" aria-label="Search">
    <button>Search</button>
  </form>
</nav>
<p class="sticky-top"><%= link_to "+Add Flat", new_flat_path, class: "btn btn-secondary mt-4" %></p>

<div class="flats-grid mt-5">
  <% @flats.each do |flat| %>
    <div class="flat-card hvr-grow text-center">
      <!-- Add an image tag with mx-auto class for horizontal centering -->
      <img src="<%= flat.picture_url %>" alt="<%= flat.name %> Image" class="mx-auto">

      <div>
        <h4><%= flat.name  %></h4>
      </div>

      <div>
        <p class="mt-4"><%= flat.address %></p>
      </div>
      <div>
        <p class="mt-4"><%= flat.description %></p>
      </div>

      <!-- Create a row with two columns for price_per_night and number_of_guests -->
      <div class="row mt-4">
        <div class="col-md-6">
          <p>Price per night: <%= flat.price_per_night %>â‚¬</p>
        </div>
        <div class="col-md-6">
          <p>Capacity: <%= flat.number_of_guests %></p>
        </div>
      </div>

      <%= link_to "See more", flat_path(flat.id), class: "btn btn-info mt-4" %>
      <%= link_to "Edit", edit_flat_path(flat.id), class: "btn btn-primary mt-4" %>
      <%= link_to "Remove", flat_path(flat.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger mt-4"%>
    </div>
  <% end %>
</div>
